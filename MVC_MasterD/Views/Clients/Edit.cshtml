@model MVC_MasterD.Models.ViewModels.ClientVM
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm("Edit", "Clients", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-6">
            <h2 class="display-5">Client</h2>
            @Html.HiddenFor(x => x.ClientId)
            @Html.HiddenFor(x => x.Picture)
            <div class="row mb-2">
                @Html.LabelFor(x => x.ClientName, htmlAttributes: new { @class = "col-form-label col-form-label-sm col-3" })
                <div class="col-7">
                    @Html.TextBoxFor(x => x.ClientName, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(x => x.ClientName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.BirthDate, htmlAttributes: new { @class = "col-form-label col-form-label-sm col-3" })
                <div class="col-7">
                    @*@Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control form-control-sm", type = "date" })*@
                    @Html.EditorFor(x => x.BirthDate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control form-control-sm", type = "date" } })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(x => x.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.Age, htmlAttributes: new { @class = "col-form-label col-form-label-sm col-3" })
                <div class="col-7">
                    @Html.TextBoxFor(x => x.Age, new { @class = "form-control form-control-sm" })
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(x => x.Age, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.PictureFile, htmlAttributes: new { @class = "col-form-label col-form-label-sm col-3" })
                <div class="col-7">
                    @Html.TextBoxFor(x => x.PictureFile, new { @class = "form-control form-control-sm mb-1", type = "file" })
                    <img src="@Model.Picture" width="32" />
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(x => x.PictureFile, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-2">
                @Html.LabelFor(x => x.MaritalStatus, htmlAttributes: new { @class = "col-form-label col-form-label-sm col-3" })
                <div class="col-7">
                    @Html.CheckBoxFor(x => x.MaritalStatus)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(x => x.MaritalStatus, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="display-5">Spot</h2>
            <div class="d-flex justify-content-end">
                <a href="#" id="btnPlus" class="btn btn-primary btn-sm" style="margin-right:2px;"><i class="fa fa-plus"></i> </a>
            </div>
            <div id="spotsContainer">
                @foreach (var item in Model.SpotList)
                {
                    @Html.Action("AddNewSpot", "Clients", new {id=item})
                }
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        <input type="submit" value="Update Data" class="btn btn-primary btn-sm" />
    </div>
}

